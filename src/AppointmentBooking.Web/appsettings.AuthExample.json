{
  "ApiSettings": {
    "BaseUrl": "https://localhost:61577",
    "TimeoutSeconds": 30
  },
  "CookieSettings": {
    "AuthCookieName": "AppointmentBooking.Auth",
    "AccessTokenCookieName": "access_token",
    "RefreshTokenCookieName": "refresh_token",
    "SecurePolicy": "Always",
    "SameSiteMode": "Strict",
    "HttpOnly": true
  },
  "SecurityRecommendations": {
    "_comment": "Production environment recommendations",
    "UseHttps": true,
    "SetSecureCookies": true,
    "EnableHsts": true,
    "ConfigureCorsProperly": true,
    "UseEnvironmentVariables": [
      "ApiSettings__BaseUrl",
      "ConnectionStrings__DefaultConnection"
    ]
  }
}

@{
    ViewData["Title"] = "Lookup Appointment";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2><i class="bi bi-search"></i> Lookup Appointment</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Lookup" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label for="confirmationCode" class="form-label">Confirmation Code</label>
                            <input type="text" name="confirmationCode" class="form-control" placeholder="APT-20251123-XXXXX" required />
                            <div class="form-text">Enter your confirmation code to view your appointment</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

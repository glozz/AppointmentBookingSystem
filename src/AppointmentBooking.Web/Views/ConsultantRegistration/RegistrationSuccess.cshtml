@{
    ViewData["Title"] = "Registration Submitted";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title text-success">Registration Submitted!</h2>
                    <p class="card-text lead mt-3">
                        Thank you for registering to become a consultant.
                    </p>
                    <p class="card-text text-muted">
                        Your application has been submitted and is pending admin approval. 
                        You will be able to log in once your account has been activated.
                    </p>
                    <hr class="my-4" />
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i>
                        <strong>What happens next?</strong>
                        <ul class="text-start mt-2 mb-0">
                            <li>An administrator will review your application</li>
                            <li>Once approved, your account will be activated</li>
                            <li>You can then log in and start managing appointments</li>
                        </ul>
                    </div>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-house"></i> Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

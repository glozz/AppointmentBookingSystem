@model IEnumerable<AppointmentDto>
@{
    ViewData["Title"] = "Past Appointments";
    var groupedAppointments = Model.OrderByDescending(a => a.AppointmentDate).ThenByDescending(a => a.StartTime)
        .GroupBy(a => a.AppointmentDate.Date);
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
    var selectedConsultantId = ViewBag.SelectedConsultantId as int?;
    var consultantName = ViewBag.ConsultantName as string ?? "Consultant";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            @if (isAdmin)
            {
                <div class="alert alert-info d-flex justify-content-between align-items-center mb-4">
                    <span>
                        <i class="bi bi-shield-check"></i> 
                        <strong>Admin View:</strong> Viewing @consultantName's schedule
                    </span>
                    <a asp-action="Dashboard" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-arrow-left-right"></i> Switch Consultant
                    </a>
                </div>
            }
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-clock-history text-secondary"></i> Past Appointments</h1>
                <a asp-action="Dashboard" asp-route-consultantId="@selectedConsultantId" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
            
            @if (Model.Any())
            {
                <div class="alert alert-secondary mb-4">
                    <i class="bi bi-info-circle"></i> Showing <strong>@Model.Count()</strong> past appointments.
                </div>
                
                @foreach (var dateGroup in groupedAppointments)
                {
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="bi bi-calendar3"></i> @dateGroup.Key.ToString("dddd, MMMM dd, yyyy")
                                <span class="badge bg-secondary ms-2">@dateGroup.Count() appointment(s)</span>
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 100px;">Time</th>
                                            <th>Customer</th>
                                            <th>Service</th>
                                            <th>Branch</th>
                                            <th>Status</th>
                                            <th>Notes</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var apt in dateGroup)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@apt.StartTime.ToString(@"hh\:mm")</strong>
                                                    <br/>
                                                    <small class="text-muted">@apt.EndTime.ToString(@"hh\:mm")</small>
                                                </td>
                                                <td>
                                                    @apt.Customer?.FirstName @apt.Customer?.LastName
                                                    <br/>
                                                    <small class="text-muted"><i class="bi bi-hash"></i>@apt.ConfirmationCode</small>
                                                </td>
                                                <td>
                                                    @apt.Service?.Name
                                                    <br/>
                                                    <small class="text-muted">@apt.Service?.DurationMinutes min</small>
                                                </td>
                                                <td>
                                                    @apt.Branch?.Name
                                                    <br/>
                                                    <small class="text-muted">@apt.Branch?.City</small>
                                                </td>
                                                <td>
                                                    @{
                                                        var badgeClass = apt.Status switch
                                                        {
                                                            AppointmentBooking.Core.Enums.AppointmentStatus.Completed => "bg-secondary",
                                                            AppointmentBooking.Core.Enums.AppointmentStatus.Cancelled => "bg-danger",
                                                            AppointmentBooking.Core.Enums.AppointmentStatus.NoShow => "bg-warning text-dark",
                                                            _ => "bg-info"
                                                        };
                                                    }
                                                    <span class="badge @badgeClass">@apt.Status</span>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(apt.Notes))
                                                    {
                                                        <small class="text-muted" title="@apt.Notes">
                                                            <i class="bi bi-chat-left-text"></i> @(apt.Notes.Length > 30 ? apt.Notes.Substring(0, 30) + "..." : apt.Notes)
                                                        </small>
                                                    }
                                                    @if (apt.Status == AppointmentBooking.Core.Enums.AppointmentStatus.Cancelled && 
                                                         !string.IsNullOrEmpty(apt.CancellationReason))
                                                    {
                                                        <br/>
                                                        <small class="text-danger" title="@apt.CancellationReason">
                                                            <i class="bi bi-x-circle"></i> Cancelled
                                                        </small>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-clock-history display-1 text-muted"></i>
                        <h4 class="mt-3">No Past Appointments</h4>
                        <p class="text-muted">You don't have any completed appointments yet.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

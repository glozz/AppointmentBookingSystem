@model IEnumerable<AppointmentDto>
@{
    ViewData["Title"] = "Upcoming Appointments";
    var groupedAppointments = Model.OrderBy(a => a.AppointmentDate).ThenBy(a => a.StartTime)
        .GroupBy(a => a.AppointmentDate.Date);
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
    var selectedConsultantId = ViewBag.SelectedConsultantId as int?;
    var consultantName = ViewBag.ConsultantName as string ?? "Consultant";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            @if (isAdmin)
            {
                <div class="alert alert-info d-flex justify-content-between align-items-center mb-4">
                    <span>
                        <i class="bi bi-shield-check"></i> 
                        <strong>Admin View:</strong> Viewing @consultantName's schedule
                    </span>
                    <a asp-action="Dashboard" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-arrow-left-right"></i> Switch Consultant
                    </a>
                </div>
            }
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-calendar-plus text-primary"></i> Upcoming Appointments</h1>
                <a asp-action="Dashboard" asp-route-consultantId="@selectedConsultantId" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (Model.Any())
            {
                <div class="alert alert-info mb-4">
                    <i class="bi bi-info-circle"></i> You have <strong>@Model.Count()</strong> upcoming appointments.
                </div>
                
                @foreach (var dateGroup in groupedAppointments)
                {
                    var isToday = dateGroup.Key == DateTime.Today;
                    var isTomorrow = dateGroup.Key == DateTime.Today.AddDays(1);
                    
                    <div class="card mb-4">
                        <div class="card-header @(isToday ? "bg-warning" : "bg-light")">
                            <h5 class="mb-0">
                                <i class="bi bi-calendar3"></i> @dateGroup.Key.ToString("dddd, MMMM dd, yyyy")
                                @if (isToday)
                                {
                                    <span class="badge bg-dark ms-2">Today</span>
                                }
                                else if (isTomorrow)
                                {
                                    <span class="badge bg-info ms-2">Tomorrow</span>
                                }
                                <span class="badge bg-secondary ms-2">@dateGroup.Count() appointment(s)</span>
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 100px;">Time</th>
                                            <th>Customer</th>
                                            <th>Service</th>
                                            <th>Branch</th>
                                            <th>Contact</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var apt in dateGroup)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@apt.StartTime.ToString(@"hh\:mm")</strong>
                                                    <br/>
                                                    <small class="text-muted">@apt.EndTime.ToString(@"hh\:mm")</small>
                                                </td>
                                                <td>
                                                    <strong>@apt.Customer?.FirstName @apt.Customer?.LastName</strong>
                                                    <br/>
                                                    <small class="text-muted"><i class="bi bi-hash"></i>@apt.ConfirmationCode</small>
                                                </td>
                                                <td>
                                                    @apt.Service?.Name
                                                    <br/>
                                                    <small class="text-muted">@apt.Service?.DurationMinutes min</small>
                                                </td>
                                                <td>
                                                    <i class="bi bi-building text-primary"></i> @apt.Branch?.Name
                                                    <br/>
                                                    <small class="text-muted">@apt.Branch?.City</small>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(apt.Customer?.Phone))
                                                    {
                                                        <i class="bi bi-telephone text-primary"></i>
                                                        <a href="tel:@apt.Customer.Phone">@apt.Customer.Phone</a>
                                                    }
                                                    <br/>
                                                    @if (!string.IsNullOrEmpty(apt.Customer?.Email))
                                                    {
                                                        <small><i class="bi bi-envelope text-muted"></i> @apt.Customer.Email</small>
                                                    }
                                                </td>
                                                <td>
                                                    @{
                                                        var badgeClass = apt.Status switch
                                                        {
                                                            AppointmentBooking.Core.Enums.AppointmentStatus.Confirmed => "bg-success",
                                                            AppointmentBooking.Core.Enums.AppointmentStatus.Pending => "bg-warning text-dark",
                                                            AppointmentBooking.Core.Enums.AppointmentStatus.Cancelled => "bg-danger",
                                                            _ => "bg-secondary"
                                                        };
                                                    }
                                                    <span class="badge @badgeClass">@apt.Status</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-calendar-x display-1 text-muted"></i>
                        <h4 class="mt-3">No Upcoming Appointments</h4>
                        <p class="text-muted">You don't have any scheduled appointments in the future.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

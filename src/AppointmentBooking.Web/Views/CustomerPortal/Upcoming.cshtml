@model IEnumerable<AppointmentDto>
@{
    ViewData["Title"] = "Upcoming Appointments";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-calendar-plus text-primary"></i> Upcoming Appointments</h1>
                <a asp-action="Dashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-list"></i> @Model.Count() Upcoming Appointment(s)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Branch</th>
                                        <th>Service</th>
                                        <th>Consultant</th>
                                        <th>Confirmation Code</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.OrderBy(a => a.AppointmentDate).ThenBy(a => a.StartTime))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</strong>
                                                @if (appointment.AppointmentDate.Date == DateTime.Today)
                                                {
                                                    <span class="badge bg-warning text-dark ms-1">Today</span>
                                                }
                                                else if (appointment.AppointmentDate.Date == DateTime.Today.AddDays(1))
                                                {
                                                    <span class="badge bg-info ms-1">Tomorrow</span>
                                                }
                                            </td>
                                            <td>@appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")</td>
                                            <td>
                                                <i class="bi bi-building text-primary"></i>
                                                @appointment.Branch?.Name<br/>
                                                <small class="text-muted">@appointment.Branch?.City</small>
                                            </td>
                                            <td>
                                                @appointment.Service?.Name<br/>
                                                <small class="text-muted">@appointment.Service?.DurationMinutes min</small>
                                            </td>
                                            <td>
                                                @if (appointment.Consultant != null)
                                                {
                                                    <i class="bi bi-person text-info"></i>
                                                    @appointment.Consultant.FullName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not assigned</span>
                                                }
                                            </td>
                                            <td>
                                                <code>@appointment.ConfirmationCode</code>
                                            </td>
                                            <td>
                                                @{
                                                    var badgeClass = appointment.Status switch
                                                    {
                                                        AppointmentBooking.Core.Enums.AppointmentStatus.Confirmed => "bg-success",
                                                        AppointmentBooking.Core.Enums.AppointmentStatus.Pending => "bg-warning text-dark",
                                                        AppointmentBooking.Core.Enums.AppointmentStatus.Cancelled => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@appointment.Status</span>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i> Details
                                                </a>
                                                @if (appointment.Status == AppointmentBooking.Core.Enums.AppointmentStatus.Confirmed ||
                                                     appointment.Status == AppointmentBooking.Core.Enums.AppointmentStatus.Pending)
                                                {
                                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#cancelModal-@appointment.Id">
                                                        <i class="bi bi-x-circle"></i> Cancel
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                @foreach (var appointment in Model)
                {
                    <!-- Cancel Modal for each appointment -->
                    <div class="modal fade" id="cancelModal-@appointment.Id" tabindex="-1" aria-labelledby="cancelModalLabel-@appointment.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="Cancel" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@appointment.Id" />
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="cancelModalLabel-@appointment.Id">Cancel Appointment</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to cancel your appointment on <strong>@appointment.AppointmentDate.ToString("MMMM dd, yyyy")</strong> at <strong>@appointment.StartTime.ToString(@"hh\:mm")</strong>?</p>
                                        <div class="mb-3">
                                            <label for="reason-@appointment.Id" class="form-label">Cancellation Reason</label>
                                            <textarea name="reason" id="reason-@appointment.Id" class="form-control" rows="3" required placeholder="Please provide a reason for cancellation"></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-x-circle"></i> Cancel Appointment
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-calendar-x display-1 text-muted"></i>
                        <h4 class="mt-3">No Upcoming Appointments</h4>
                        <p class="text-muted">You don't have any scheduled appointments.</p>
                        <a asp-controller="Appointments" asp-action="Book" class="btn btn-primary">
                            <i class="bi bi-calendar-plus"></i> Book an Appointment
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

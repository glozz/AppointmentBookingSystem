@model IEnumerable<AppointmentDto>
@{
    ViewData["Title"] = "Past Appointments";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-calendar-check text-secondary"></i> Past Appointments</h1>
                <a asp-action="Dashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
            
            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="bi bi-list"></i> @Model.Count() Past Appointment(s)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Branch</th>
                                        <th>Service</th>
                                        <th>Consultant</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.OrderByDescending(a => a.AppointmentDate).ThenByDescending(a => a.StartTime))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</strong>
                                            </td>
                                            <td>@appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")</td>
                                            <td>
                                                <i class="bi bi-building text-primary"></i>
                                                @appointment.Branch?.Name<br/>
                                                <small class="text-muted">@appointment.Branch?.City</small>
                                            </td>
                                            <td>
                                                @appointment.Service?.Name<br/>
                                                <small class="text-muted">@appointment.Service?.DurationMinutes min</small>
                                            </td>
                                            <td>
                                                @if (appointment.Consultant != null)
                                                {
                                                    <i class="bi bi-person text-info"></i>
                                                    @appointment.Consultant.FullName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not assigned</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var badgeClass = appointment.Status switch
                                                    {
                                                        AppointmentBooking.Core.Enums.AppointmentStatus.Completed => "bg-secondary",
                                                        AppointmentBooking.Core.Enums.AppointmentStatus.Cancelled => "bg-danger",
                                                        AppointmentBooking.Core.Enums.AppointmentStatus.NoShow => "bg-warning text-dark",
                                                        _ => "bg-info"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@appointment.Status</span>
                                                @if (appointment.Status == AppointmentBooking.Core.Enums.AppointmentStatus.Cancelled && 
                                                     !string.IsNullOrEmpty(appointment.CancellationReason))
                                                {
                                                    <br/>
                                                    <small class="text-muted" title="@appointment.CancellationReason">
                                                        <i class="bi bi-info-circle"></i> Reason provided
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i> View Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-calendar-check display-1 text-muted"></i>
                        <h4 class="mt-3">No Past Appointments</h4>
                        <p class="text-muted">You don't have any completed appointments yet.</p>
                        <a asp-controller="Appointments" asp-action="Book" class="btn btn-primary">
                            <i class="bi bi-calendar-plus"></i> Book Your First Appointment
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
